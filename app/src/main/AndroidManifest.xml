<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.drock.n_corder" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OnboardSensorList"
            android:label="@string/title_activity_onboard_sensor_list"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.drock.n_corder.MainActivity" />
        </activity>
        <activity
            android:name=".AndroidSensorListActivity"
            android:label="@string/title_activity_android_sensors"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.drock.n_corder.MainActivity" />
        </activity>
        <activity
            android:name=".ConnectIOIOActivity"
            android:label="@string/title_activity_connect_ioio"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.drock.n_corder.MainActivity" />
        </activity>
        <activity
            android:name=".OnboardSensorActivity"
            android:label="@string/title_activity_onboard_sensor"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.drock.n_corder.AndroidSensorListActivity" />
        </activity>
    </application>

</manifest>
